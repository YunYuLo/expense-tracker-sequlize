<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">修改明細</h5>
          <hr>
          {{>message}}
          <form action="/records/{{{records.id}}}?_method=PUT" method="POST">
            <div class="form-group form-row">
              <label for="name" class="col-md-3 col-form-label">名稱＊</label>
              <div class="col-md-8">
                <input type="text" name="name" class="form-control" id="name" placeholder="名稱" value="{{records.name}}"
                  required>
              </div>
            </div>
            <div class="form-group form-row">
              <label for="date" class="col-md-3 col-form-label">日期＊</label>
              <div class="col-md-8">
                <input type="date" name="date" class="form-control" id="date" data-provide="datepicker"
                  placeholder="YYYY/MM/DD" value="{{formatTime records.date}}" required>
              </div>
            </div>
            <div class="form-group form-row">
              <label for="merchant" class="col-md-3 col-form-label">商家</label>
              <div class="col-md-8">
                <input type="text" name="merchant" class="form-control" id="merchant" placeholder="商家名稱"
                  value="{{records.merchant}}">
              </div>
            </div>
            <div class="form-group form-row">
              <label for="category" class="col-md-3 col-form-label">分類＊</label>
              <div class="col-md-8">
                <select class="d-inline-block col-4 custom-select" name="category" id="category" required>
                  <option value="" disabled selected>請選擇類別</option>
                  <option value="home" {{#ifEquals records.category "home"}} selected{{/ifEquals}}>家居物業</option>
                  <option value="traffic" {{#ifEquals records.category "traffic"}} selected{{/ifEquals}}>交通出行</option>
                  <option value="entertainment" {{#ifEquals records.category "entertainment"}} selected{{/ifEquals}}>
                    休閒娛樂
                  </option>
                  <option value="food" {{#ifEquals records.category "food"}} selected{{/ifEquals}}>餐飲食品</option>
                  <option value="other" {{#ifEquals records.category "other"}} selected{{/ifEquals}}>其他</option>
                </select>
              </div>
            </div>
            <div class="form-group form-row">
              <label for="amount" class="col-md-3 col-form-label">金額＊</label>
              <div class="col-md-8">
                <input type="number" name="amount" class="form-control" id="amount" placeholder="amount"
                  value="{{records.amount}}" required>
              </div>
            </div>

            <button class="btn btn-success" type="submit">Save</button>

          </form>
        </div>
      </div>

    </div>
  </div>
</div>